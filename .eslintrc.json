{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["plugin:vitest/recommended", "plugin:react-hooks/recommended", "prettier"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": ["./tsconfig.json", "./tsconfig.node.json"],
    "tsconfigRootDir": "."
  },
  "plugins": ["react", "react-hooks", "vitest"],
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "single"]
  }
}
